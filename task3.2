/* Base styles */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    text-align: center;
  }
  
  header, footer {
    background-color: #4CAF50;
    color: white;
    padding: 20px;
  }
  
  main {
    padding: 20px;
    background-color: #f4f4f4;
  }
  
  /* Media Queries for Responsive Design */
  @media (max-width: 768px) {
    header, footer {
      padding: 15px;
      font-size: 18px;
    }
  
    main {
      font-size: 16px;
    }
  }
  
  @media (max-width: 480px) {
    header, footer {
      padding: 10px;
      font-size: 16px;
    }
  
    main {
      font-size: 14px;
      padding: 15px;
    }
  }
  
